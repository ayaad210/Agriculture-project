@model IEnumerable<Agriculture_projectv1.Models.CrossType>

@{
    ViewBag.Title = "Index";
    string x = "none";
    if (ViewBag.type=="A")
    {
        x = "block";
    }
}


    <div class="container body-content mrgt5">


        @Html.ActionLink("Create New", "Create",null,new { @style="display:"+x})

        <h2>Crops Componies</h2>

        <div class="">

            @foreach (var item in Model)
           {

                var imgsrc = string.Empty;
                if (item.Image != null && item.Image.Count() > 10)
                {
                    var base64 = Convert.ToBase64String(item.Image);
                    imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                }
                else
                {

                    imgsrc = "/Content/img/download.jpg";
                }



                <div class="col-lg-3" style="margin-bottom:2%">
                    <div class="card " style=";width:100%;background-color:#4CAF50">
                        <img class="card-img-top img-circle" width="180" height="200" src="@imgsrc" alt="Card image cap">
                        <div class="card-body " style="background-color:whitesmoke;color:black ">
                            <h3 class="card-title" style="max-height:25PX">@item.Name </h3>
                            <br />
                            @*<p class="card-text">@item.Notes</p>*@
                            @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-primary" }) 
                            @Html.ActionLink("Edit", "Edit", new { id = item.id },new {  @style = "display:" + x })
                            @Html.ActionLink("Componies", "CrossComponies", new { id = item.id }, new { @style="color:blue;display:" + x })


                            @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn-danger" ,@style="display:"+x})
                      
                          </div>
                    </div>
                </div>


            }
        </div>
    </div>

    <style>
        .card {
            box-shadow: 5px 5px 8px 5px rgba(80,255,80,0.2);
            transition: 0.3s;
            width: 40%;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        .btn {
            background-color: #4CAF50;
        }

    </style>
